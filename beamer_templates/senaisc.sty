}

\AtEndDocument{
 \usebeamertemplate{wrapper}
}

\AtBeginSection{
 \begin{frame}[noframenumbering]{Sumário}
  \tableofcontents[currentsection,hideothersubsections]
 \end{frame}
}

\AtBeginSubsection{
 \begin{frame}[noframenumbering]{Sumário}
  \tableofcontents[
   currentsection,
   currentsubsection,
   subsectionstyle=show/shaded/hide
  ]
 \end{frame}
}

